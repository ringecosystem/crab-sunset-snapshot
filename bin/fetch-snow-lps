#!/usr/bin/env node

const path = require('path');
const { fetchSnowLPsSnapshot } = require('../src/fetch-snow-lps');

async function main() {
	// Output directory is fixed to data folder
	const outputDir = path.join(__dirname, '..', 'data');

	try {
		await fetchSnowLPsSnapshot(outputDir);
	} catch (error) {
		console.error("‚ùå Fatal error:", error.message);
		process.exit(1);
	}
}

main();
