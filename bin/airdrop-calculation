#!/usr/bin/env node

const path = require('path');
const { calculateAirdrop } = require('../src/special/airdrop-calculation');

async function main() {
	const outputDir = path.join(__dirname, '..', 'data');

	try {
		const result = await calculateAirdrop(outputDir);
		console.log(`\nâœ… Airdrop calculation complete!`);
		console.log(`ğŸ“Š Total recipients: ${result.statistics.total_recipients}`);
		console.log(`ğŸ’¾ Saved to: ${result.outputFile}`);
	} catch (error) {
		console.error('âŒ Fatal error:', error.message);
		process.exit(1);
	}
}

main();
