#!/usr/bin/env node

const path = require('path');
const { fetchNativeTokenSnapshot } = require('../src/fetch-native-holders');

async function main() {
	// Output directory is fixed to data folder
	const outputDir = path.join(__dirname, '..', 'data');

	try {
		await fetchNativeTokenSnapshot(outputDir);
	} catch (error) {
		console.error("‚ùå Fatal error:", error.message);
		process.exit(1);
	}
}

main();
