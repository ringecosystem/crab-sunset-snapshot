#!/usr/bin/env node

const path = require('path');
const { fetchCrabTokenSnapshot } = require('../src/crab/fetch-token');

async function main() {
	const contractAddress = process.argv[2];
	if (!contractAddress) {
		console.error("❌ Error: Please provide contract address as parameter");
		console.log("Usage: fetch-crab <contract_address>");
		process.exit(1);
	}

	const outputDir = path.join(__dirname, '..', 'data');

	try {
		await fetchCrabTokenSnapshot(contractAddress, outputDir);
	} catch (error) {
		console.error("❌ Fatal error:", error.message);
		process.exit(1);
	}
}

main();
