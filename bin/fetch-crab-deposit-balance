#!/usr/bin/env node

const path = require('path');
const { fetchCrabDepositBalanceSnapshot } = require('../src/special/crab-deposit-balance');

async function main() {
	const outputDir = path.join(__dirname, '..', 'data');

	try {
		await fetchCrabDepositBalanceSnapshot(outputDir);
	} catch (error) {
		console.error('‚ùå Fatal error:', error.message);
		process.exit(1);
	}
}

main();
